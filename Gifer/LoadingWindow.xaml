<Window x:Class="Gifer.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300" ResizeMode="NoResize" SizeToContent="Height"
        WindowStyle="None">
    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0"
               Content="Loading..." />
        
        <ProgressBar Grid.Row="1" 
                     IsIndeterminate="True" Name="ProgressBar" VerticalAlignment="Center" Height="24" />
    </Grid>
</Window>
